html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body    
        h1 Update Form for Fighter Jets 
        form(method='POST', action='http://localhost:3000/update-cobj')
            div
                label(for='name') Name:
                input(type='text', name='name', id='name')
            div
                label(for='role') Role:
                select(name='role', id='role')
                    option(value="Bomber") Bomber
                    option(value="Air superiority") Air Superiority
                    option(value="Reconnaissance") Reconnaissance
            div
                label(for='mission') Mission:
                select(name='mission', id='mission')
                     option(value='Operation Dessert Storm') Operation Dessert Storm
                     option(value='Gulf War') Gulf War
                     option(value='Yemen Civil War') Yemen Civil War
                     option(value='Syria Civil War') Syria Civil War
                     option(value='Operation Iraqi Freedom') Operation Iraqi Freedom
            div
                button(type='submit') Submit

        a(href='http://localhost:3000/') Return to the homepage
